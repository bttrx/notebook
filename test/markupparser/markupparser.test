#-----------------------------------------------------------------------
# Helper routines

proc prettyParse {markup} {
    set taglist [parse $markup]

    set newlist {}
    foreach {tag value} $taglist {
        lappend newlist [list $tag $value]
    }

    return [join $newlist "\n"]
}

